{# templates/baselayout.html.twig #}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Le Bus Magique{% endblock %}</title>
    <link type="text/css" rel="stylesheet" href="/vendor/twbs/bootstrap/dist/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="/vendor/twbs/bootstrap/dist/css/bootstrap-theme.min.css">
    <link type="text/css" rel="stylesheet" href="/css/base.css">
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon"/>
    {% block style %}

    {% endblock %}
</head>

<nav>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" style="background-color:#333" ><img style="display:inline-block;width:30px;"src="/favicon.jpg"> Voyages Bus-Magique</a>
        </div>

        <a href="/">Accueil</a>
        <a href="/programmation">Programmations</a>
        <a href="/circuit">Circuits</a>
        {#
        <div class="dropdown">
            <button class="dropbtn" onclick="myFunction()">Circuits
            </button>
            <div class="dropdown-content" id="myDropdown">
                <a href="#">Andalousie</a>
                <a href="#">Italie</a>
                <a href="#">Vietnam</a>
                <a href="#">Ile de France</a>
            </div>
        </div>#}
        <a class="nav navbar-nav navbar-right" href="#" onclick="document.getElementById('id01').style.display='block'"><span class="glyphicon glyphicon-log-in"></span>  Connexion</a></li>
    </div>
</nav>

<body>

<!-- Form de connexion -->

<div id="id01" class="modal">
  <span onclick="document.getElementById('id01').style.display='none'"
        class="close" title="Close Modal">&times;</span>

    <form class="modal-content animate" action="/login.php">
        <div class="imgcontainer">
            <img style="width:200px;" src="/images/avatar.png" alt="Avatar" class="avatar">
        </div>

        <div class="container">
            <label><b>Identifiant  </b></label>
            <input type="text" placeholder="Entrez votre identifiant" name="identifiant"   oninput="this.setCustomValidity('')"  oninvalid="this.setCustomValidity('Veuillez entrer un identifiant valide')" required>
            <br>
            <label><b>Mot de passe</b></label>
            <input type="password" placeholder="Entrez votre mot de passe" name="pswd" oninput="this.setCustomValidity('')"  oninvalid="this.setCustomValidity('Veuillez entrer un mot de passe valide')" required>
            <br>
        </div>
        <button class="submitbtn center-block" type="submit">Me Connecter</button>

        <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn center-block">Retour</button>
    </form>
</div>


<div class="container-fluid text-center">
    <div  class="row content">

        <!-- Menu gauche, nouveautes -->

        <div style="margin-top:7%;" class="col-sm-2 sidenav">
            <div class="well">
                <h3>Nouveaux parcours:</h3>
                <ul style="list-style-type:none;padding:0">
                    <li><a>Andalousie</a></li>
                    <li><a>Vietnam</a></li>
                </ul>
            </div>
            <div class="well">
                <h3>Prochaines programmations:</h3>
                <ul style="list-style-type:none;padding:0">
                    <li><a>Italie le 13-10-2017 </a></li>
                </ul>
            </div>
        </div>

        <!-- Centre -->
        <div style="padding-top:0%;"class="col-sm-8 text-left">
            <div class="container">

            {% block body %}
            {% endblock %}

            </div>
        </div>

        <!-- Infos entreprise -->

        <div style="margin-top:7%;" class="col-sm-2 sidenav">
            <div class="well">
                <h3>A propos</h3>
                <p>Avec Voyages Bus-Magique, découvrez de nouvelles contrées, faites des rencontres mémorables.<br>Laissez libre court à votre imagination !</p>
            </div>
            <div class="well">
                <h3>Contacts</h3>
                <p><span class="glyphicon glyphicon-envelope"></span>   voyages@bus-magique.eu</p>
                <p><span class="glyphicon glyphicon-phone-alt"></span>   +33 1 59 46 35 95</p>

                <p><span class="glyphicon glyphicon-map-marker"></span>  15 rue des Voyageurs,<br>Paris, 75005</p>
            </div>

            <div class="well">
                <div id="map" style="width:24rem;height:22rem"></div>
            </div>

        </div>


    </div>
</div>
<script src="/vendor/components/jquery/jquery.min.js"></script>
<script src="/vendor/twbs/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/js/modal.js"></script>
<script src="/js/map.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCx82BRRrYUN7aSZu4IeS8ubdNQOZZwwdA&callback=myMap"></script>
{% block scripts %}{% endblock %}
</body>


<footer class="footer">
  <div id="footer_content">
      {% block footer %}
      {% endblock %}
  </div>
</footer>
